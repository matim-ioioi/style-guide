{
  "name": "@timmio/style-guide",
  "version": "1.0.1",
  "description": "Style guide tools (ESLint 9, Prettier, Stylelint, TS) for dev web applications",
  "publishConfig": {
    "access": "public"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/matim-ioioi/style-guide.git"
  },
  "keywords": [
    "eslint",
    "prettier",
    "stylelint",
    "typescript",
    "vue",
    "graphql",
    "style guide"
  ],
  "author": "Tim Mavrin",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/matim-ioioi/style-guide/issues"
  },
  "homepage": "https://github.com/matim-ioioi/style-guide#readme",
  "type": "module",
  "exports": {
    "./eslint": "./dist/eslint/configs/createESLintConfigs.js",
    "./prettier": "./src/prettier/index.js",
    "./stylelint": "./src/stylelint/index.js",
    "./typescript/*": "./src/typescript/*",
    "./*": "./*"
  },
  "files": [
    "src/",
    "dist/"
  ],
  "scripts": {
    "prepare": "husky install",
    "eslint": "cross-env TIMING=1 eslint . --no-config-lookup --config eslint.config.ts",
    "eslint:fix": "npm run eslint -- --fix",
    "tslint": "tsc --noEmit --skipLibCheck",
    "lint": "run-s eslint tslint",
    "lint:fix": "run-s eslint:fix tslint",
    "build": "tsc --project tsconfig.build.json",
    "prepack": "npm run lint && npm run build"
  },
  "dependencies": {
    "@eslint-community/eslint-plugin-eslint-comments": "4.4.1",
    "@graphql-eslint/eslint-plugin": "4.4.0",
    "@stylistic/eslint-plugin": "4.2.0",
    "eslint": "9.23.0",
    "eslint-config-prettier": "10.1.1",
    "eslint-import-resolver-alias": "1.1.2",
    "eslint-import-resolver-typescript": "4.3.1",
    "eslint-plugin-import-x": "4.10.0",
    "eslint-plugin-prettier": "5.2.5",
    "eslint-plugin-vue": "10.0.0",
    "globals": "16.0.0",
    "postcss": "8.5.3",
    "postcss-html": "1.8.0",
    "postcss-scss": "4.0.9",
    "prettier": "3.5.3",
    "stylelint": "16.17.0",
    "stylelint-config-css-modules": "4.4.0",
    "stylelint-config-recess-order": "6.0.0",
    "stylelint-config-recommended": "15.0.0",
    "stylelint-config-recommended-vue": "1.6.0",
    "stylelint-config-standard-scss": "14.0.0",
    "typescript": "5.8.2",
    "typescript-eslint": "8.29.0",
    "vue-eslint-parser": "10.1.1"
  },
  "devDependencies": {
    "@types/node": "22.13.14",
    "cross-env": "7.0.3",
    "husky": "8.0.3",
    "jiti": "2.5.1",
    "npm-run-all": "4.1.5",
    "rimraf": "5.0.1"
  },
  "engines": {
    "node": ">=22"
  },
  "prettier": "./src/prettier/index.js"
}
